script.sh:
mkdir ./buttami ./buttami/"*" ./buttami/"**" ./buttami/"***" ./buttami/";;"
ls ./buttami/*
for name in ./buttami/* ; do touch "$name.txt" ; done
cp -R /usr/include ./buttami/
find ./buttami -type d
rm -r -f ./buttami/include

script.sh:
mkdir ./buttami ./buttami/"*" ./buttami/"**" ./buttami/"***" ./buttami/";;"
for name in $(ls ./buttami/*) ; do touch "$name.txt" ; done
cp -R /usr/include ./buttami/
find ./buttami -type d
rm -r -f ./buttami/include

chiama_fattoriale.sh:
RISULTATO=$(./fattoriale.sh 5)
echo $RISULTATO

fattoriale.sh:
#!/bin/bash
NUM=1
NUM2=2
while(( $NUM<=$1 )); do (( NUM2=$NUM2*$NUM )) 
(( NUM=$NUM+1 )) 
done
echo $NUM2

chiama_fattoriale1.sh:
RIS = 1
source ./fattoriale1.sh 5
echo "$RIS"

fattoriale1.sh:
#!/bin/bash
NUM=1

while (( $RIS <= $1 )) ; do
(( RIS = $RIS*$NUM ))
(( NUM = $NUM + 1 ))
done

echo $NUM2 

script1.sh:
I=1

while (( $I<=$# )); do
echo  ${!I}
(( I=$I+1 ))
done

./script2.sh $@

script2.sh:
J=$#
while (( $J > 0 )) ; do
echo ${!J}
(( J=$J-1 ))
done

echo -e "ciao\n"

echo -n "ciao"

ls

