script:
for f in * ; do echo "file is $f" ; ls -ld $f ; done ; if (( $? != 0 )) ; then echo "errore" ; fi ; done

script:
#!/bin/bash

FILES=$(ls)

for file1 in $FILES ; do
for file2 in $FILES ; do
for file3 in $FILES ; do
echo "($file1;$file2;file3)"
done
done 
done

